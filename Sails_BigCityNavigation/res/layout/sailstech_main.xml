<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sails.example.SailsTechActivity">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/SAILSMap" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/zoomin"
            android:src="@drawable/zoominb"
            android:layout_above="@+id/zoomout"
            android:layout_alignParentRight="true" 
            android:visibility="gone"
            />
        <ImageView
            android:layout_width="57dp"
            android:layout_height="57dp"
            android:id="@+id/zoomout"
            android:baselineAlignBottom="false"
            android:src="@drawable/zoomoutb"
            android:layout_alignTop="@+id/lockcenter"
            android:layout_alignParentRight="true" 
            android:visibility="gone"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/maplogo"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:visibility="gone"
             />

         <Button
            android:id="@+id/btn_sails_toNavigation"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/menu_navigation"
            android:textColor="#666766"
            android:textStyle="bold"
            android:drawableLeft="@drawable/navigation3"
            android:background="@drawable/sailstech_navi_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            />
          <Button
            android:id="@+id/btn_sails_navigation_target"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="@string/menu_navigation"
            android:textColor="#666766"
            android:textStyle="bold"
            android:background="@drawable/sailstech_navi_btn"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/stopRoute"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="X"
            android:textSize="20sp"
            android:textColor="#666766"
            android:background="@drawable/sailstech_navi_btn"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            />
